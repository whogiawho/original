  			android:textColorHighlight="@color/yellow" 
  			android:textSize="24dp"
  			android:layout_alignParentTop="true"
  			android:layout_centerHorizontal="true"    			
  			android:id="@+id/practisetitle"/>

  		<oms.cj.tube.tutor.TutorQuizView
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
   			app:randomized="false"
   			app:heightpercent="0.80" 
			app:cube0backColor="@color/orange"
			app:cube1backColor="@color/orange"
			app:cube2backColor="@color/orange"
			app:cube3backColor="@color/orange"
			app:cube4backColor="@color/orange"
			app:cube5backColor="@color/orange"
			app:cube6backColor="@color/red"
			app:cube7backColor="@color/red"
			app:cube8backColor="@color/yellow"
	
			app:cube18frontColor="@color/red"
			app:cube19frontColor="@color/red"
			app:cube20frontColor="@color/red"
			app:cube21frontColor="@color/red"
			app:cube22frontColor="@color/red"
			app:cube23frontColor="@color/red"
			app:cube24frontColor="@color/orange"
			app:cube25frontColor="@color/blue"
			app:cube26frontColor="@color/green"
	
			app:cube0leftColor="@color/blue"
			app:cube3leftColor="@color/blue"
			app:cube6leftColor="@color/yellow"
			app:cube9leftColor="@color/blue"
			app:cube12leftColor="@color/blue"
			app:cube15leftColor="@color/orange"
			app:cube18leftColor="@color/blue"
			app:cube21leftColor="@color/blue"
			app:cube24leftColor="@color/green"
	
			app:cube2rightColor="@color/green"
			app:cube5rightColor="@color/green"
			app:cube8rightColor="@color/blue"
			app:cube11rightColor="@color/green"
			app:cube14rightColor="@color/green"
			app:cube17rightColor="@color/green"
			app:cube20rightColor="@color/green"
			app:cube23rightColor="@color/green"
			app:cube26rightColor="@color/yellow"	
	
			app:cube0bottomColor="@color/white"
			app:cube1bottomColor="@color/white"
			app:cube2bottomColor="@color/white"
			app:cube9bottomColor="@color/white"
			app:cube10bottomColor="@color/white"
			app:cube11bottomColor="@color/white"
			app:cube18bottomColor="@color/white"
			app:cube19bottomColor="@color/white"
			app:cube20bottomColor="@color/white"
	
			app:cube6topColor="@color/blue"
			app:cube7topColor="@color/yellow"
			app:cube8topColor="@color/orange"
			app:cube15topColor="@color/yellow"
			app:cube16topColor="@color/yellow"
			app:cube17topColor="@color/yellow"
			app:cube24topColor="@color/yellow"
			app:cube25topColor="@color/yellow"
			app:cube26topColor="@color/red"
			android:layout_below="@+id/practisetitle"
   			android:id="@+id/practiseview"/>

		<include layout="@layout/practisebuttons" />	  		
    	
    </RelativeLayout>
</LinearLayout>
