<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:adsdk="http://schemas.android.com/apk/res/oms.cj.WuZiGame" 
	android:id="@+id/gamelayout"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">
    
    <TextView android:id="@+id/step"
        android:layout_alignParentTop="true"
    	android:layout_alignParentLeft="true"
    	android:layout_height="wrap_content" 
    	android:layout_width="wrap_content"/>
    	  
	<oms.cj.view.SimArrowsView
    	android:id="@+id/simarrowpad"
    	android:layout_centerVertical="true"
    	android:layout_alignParentLeft="true"
    	android:layout_height="wrap_content" 
    	android:layout_width="wrap_content"/>
    
    <TableLayoutWithBorder 
    	android:id="@+id/chessboardlayout"
    	android:layout_centerVertical="true"
    	android:layout_toRightOf="@id/simarrowpad"
    	android:layout_height="wrap_content" 
    	android:layout_width="wrap_content"/>

    <ImageButton 
    	android:id="@+id/ok" 
    	android:layout_centerVertical="true"
    	android:layout_alignParentRight="true"
		android:src="@drawable/enter"    	
    	android:background="#00000000"
   		android:layout_height="wrap_content"
   		android:layout_width="wrap_content" />
    
    <RelativeLayout android:id="@+id/wostoreAdContainer"
        android:layout_alignParentBottom="true"
    	android:layout_alignParentLeft="true"
    	android:layout_height="wrap_content" 
    	android:layout_width="wrap_content"/>
            
</RelativeLayout>
